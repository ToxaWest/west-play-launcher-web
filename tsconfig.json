{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "target": "ESNext",
    "jsx": "react",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "paths": {
      "@hook/*": ["./src/hooks/*"],
      "@type/*": ["./src/types/*"]
    }
  },
  "exclude": ["node_modules", "build", ".idea"],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}