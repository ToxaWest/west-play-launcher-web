{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "target": "ESNext",
    "jsx": "react",
    "noImplicitAny": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "exclude": ["node_modules", "build", ".idea"],
    "paths": {
      "@hook/*": ["./src/hooks/*"],
      "@type/*": ["./src/types/*"]
    }
  }
}